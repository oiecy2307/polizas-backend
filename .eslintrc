{
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "semi" : [2, "always"],
    "max-len": [2, 120, 2],
    "comma-dangle": 0
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": [
    "security"
  ],
  "extends": [
    "plugin:security/recommended"
  ]
}
